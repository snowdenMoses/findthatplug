{
    "AWSEBDockerrunVersion": "3",
    "ports": [
        {
            "containerPort": 80
        }
    ],
    "containerDefinitions": [
        {
            "name": "frontend",
            "image": "snowdenmoses/frontend",
            "memory": 1000,
            "essential": false,
            "host": "frontend",
            "portMappings": [
                {
                    "hostPort": 3000,
                    "containerPort": 3000
                }
            ]
        },
        {
            "name": "api",
            "image": "snowdenmoses/api",
            "essential": false,
            "memory": 1000,
            "host": "api",
            "portMappings": [
                {
                    "hostPort": 3000,
                    "containerPort": 3000
                }
            ]
        },
        {
            "name": "db",
            "image": "snowdenmoses/db",
            "essential": false,
            "memory": 1000,
            "host": "db",
            "PortMappings": [
                {
                    "ContainerPort": 5432,
                    "HostPort": 5432
                }
            ],
            "Volumes": [
                {
                    "HostDirectory": "./pg-data",
                    "ContainerDirectory": "/var/lib/postgresql/data"
                }
            ]
        }
    ]
}
