{
    "AWSEBDockerrunVersion": "3",
    "containerDefinitions": [
        {
            "name": "frontend",
            "image": "snowdenmoses/frontend",
            "memory": 128,
            "essential": false,
            "host": "frontend"
        },
        {
            "name": "api",
            "image": "snowdenmoses/api",
            "essential": false,
            "memory": 128,
            "host": "api"
        },
        {
            "name": "db",
            "image": "snowdenmoses/db",
            "essential": false,
            "memory": 128,
            "host": "db"
        },
        {
            "name": "nginx",
            "image": "snowdenmoses/nginx",
            "memory": 128,
            "essential": true,
            "host": "nginx",
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "frontend",
                "api"
            ]
        }
    ]
}